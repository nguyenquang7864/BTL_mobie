<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageviewSearchbaihat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/iconlove"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textviewsearchtenbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#090909"
        android:text="Tên bài hát"
        android:layout_toRightOf="@+id/imageviewSearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/textviewsearchcasibaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#8C8787"
        android:text="Ca Sĩ"
        android:layout_toRightOf="@id/imageviewSearchbaihat"
        android:layout_below="@+id/textviewsearchtenbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/imageviewSearchluotthich"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/iconlove"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>



</RelativeLayout>