<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgviewbaihat_"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginTop="10dp"
             />



        <TextView
            android:id="@+id/textviewtenbaihat_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/imgviewbaihat_"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:layout_marginTop="15dp"
            android:text="Tên ca khúc"
            android:textColor="#0B0A0A"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textviewtencasi_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewtenbaihat_"
            android:layout_alignStart="@id/textviewtenbaihat_"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imgviewbaihat_"
            android:text="Ca sĩ"
            android:textColor="#606060"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageviewluotthichdanhsachbaihat_"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/iconlove" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
